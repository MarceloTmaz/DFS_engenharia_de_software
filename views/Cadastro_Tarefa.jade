html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")

        if dados
            title Gerenciador  #{dados.titulo}
        else
            title Gerenciador
    body

    h1 Criar Tarefa
    form(action="/tarefa/criar", method="post")
        label(for="nom") Titulo:
        input(type="text", id="titulo", name="titulo", placeholder="Digite o titulo")
        p
        label(for="descricao") Descrição:
        input(type="text", id="descricao", name="descricao", placeholder="Digite a descrição")
        p
        label(for="impotancia") Importancia:
        input(type="number", min="1" max="5" id="esforco", name="esforco", placeholder="Digite o esforco")
        p
        button(type="submit" id="criar", name="criar" class="btn btn-outline-primary") Enviar
