html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")

        if dados
            title Gerenciador  #{dados.titulo}
        else
            title Gerenciador
    body
 
      table 
        each i in dados.total
          tr  
            td(colspan='1') 
              h3 Titulo: 
            td(colspan='1') 
              h1(id="titulo"+i.id, name=i.titulo) #{i.titulo}
          tr  
            td(colspan='1') 
              h3 Descrição: 
            td(colspan='1') 
              h3(id="descricao"+i.id, name=i.descricao) #{i.descricao}
          tr 
            td(colspan='1') 
              h3 Esforço: 
            td(colspan='1') 
              h4(id=i.titulo+i.id,name=i.id) #{i.esforco}
          tr 
            td(colspan='1') 
              h3 Estado: 
            td(colspan='1') 
              if i.status == true
                  h6(id="concluido"+i.id , name="concluido"+i.id) Concluido.
              else
                  h6(id="nao_concluido"+i.id , name="nao_concluido"+i.id) Não Concluido.
          tr 
            td(colspan='1') 
              h3 Opções: 
            td(colspan='1') 
              form(action="/tarefa/trocarStatus", method="post")
                input(type="number", id="id", name="id", value=i.id,  hidden)
                button(type="submit" class="btn btn-outline-secondary", id='trocar'+i.id) Trocar status
            
              form(action="/tarefa/remover", method="post")
                input(type="number", id="id", name="id", value=i.id,  hidden)
                button(type="submit" class="btn btn-outline-secondary", id='remover'+i.id) Remover Tarefa